@model IEnumerable<ABC_Retail_System.Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

<h2>Customers</h2>

<a class="btn btn-primary" asp-action="Create">
    <i class="fas fa-plus me-1"></i> Add New Customer
</a>

<div class="table-responsive mt-3">
    <table class="table align-middle">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model == null || !Model.Any())
            {
                <tr>
                    <td colspan="6" class="text-center text-muted">
                        No customers found. Click "Add New Customer" to create one.
                    </td>
                </tr>
            }
            else
            {
                foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.FullName</td>
                        <td>@customer.Email</td>
                        <td>@(string.IsNullOrEmpty(customer.PhoneNumber) ? "-" : customer.PhoneNumber)</td>
                        <td>@(string.IsNullOrEmpty(customer.Address) ? "-" : customer.Address)</td>
                        <td>@customer.Timestamp?.ToString("d MMM yyyy")</td>
                        <td style="white-space:nowrap">
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@customer.RowKey">
                                <i class="fas fa-eye"></i>
                            </a>
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@customer.RowKey">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@customer.RowKey">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>


