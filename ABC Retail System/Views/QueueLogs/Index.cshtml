@model List<string>
@{
    ViewData["Title"] = "Queue Logs";
}

<div class="container mt-4">
    <h1>Queue Logs</h1>
    
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            <h4>Error</h4>
            <p>@ViewBag.Error</p>
        </div>
    }

    <div class="card mt-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Recent Queue Messages</h5>
            <a href="#" onclick="location.reload()" class="btn btn-sm btn-outline-primary">
                <i class="fas fa-sync-alt"></i> Refresh
            </a>
        </div>
        <div class="card-body p-0">
            @if (Model == null || !Model.Any())
            {
                <div class="p-4 text-center text-muted">
                    No queue messages found in the logs.
                </div>
            }
            else
            {
                <div class="list-group list-group-flush">
                    @foreach (var message in Model)
                    {
                        <div class="list-group-item">
                            <div class="d-flex w-100 justify-content-between">
                                <small class="text-muted">@message.Split(':')[0]</small>
                            </div>
                            <p class="mb-1">@message.Substring(message.IndexOf(':') + 1).Trim()</p>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
    
    <div class="mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to Home
        </a>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-refresh every 30 seconds
        setTimeout(function() {
            location.reload();
        }, 30000);
    </script>
}
