@model IEnumerable<ABC_Retail_System.Models.Product>

<h2>Products</h2>

<a class="btn btn-primary" asp-action="Create">Add New Product</a>



<div class="table-responsive">
<table class="table align-middle">
    <thead>
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Brand</th>
            <th>Color</th>
            <th>Size</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @if (Model == null || !Model.Any())
    {
        <tr>
            <td colspan="8" class="text-center text-muted">No products found. Click "Add New Product" to create one.</td>
        </tr>
    }
    else
    {
        foreach (var product in Model)
        {
            <tr>
                <td style="width:80px">
                    @if (!string.IsNullOrWhiteSpace(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" alt="@product.ProductName" style="max-width: 64px; max-height: 64px; object-fit: cover;" />
                    }
                </td>
                <td>@product.ProductName</td>
                <td>@(product.Price.HasValue ? string.Format(new System.Globalization.CultureInfo("en-ZA"), "{0:C}", product.Price.Value) : "")</td>
                <td>@product.StockQuantity</td>
                <td>@product.Brand</td>
                <td>@product.Colour</td>
                <td>@product.Size</td>
                <td style="white-space:nowrap">
                    <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@product.RowKey">Details</a>
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@product.RowKey">Edit</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@product.RowKey">Delete</a>
                </td>
            </tr>
        }
    }
    </tbody>
</table>
</div>