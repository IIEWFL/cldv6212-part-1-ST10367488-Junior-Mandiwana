@model ABC_Retail_System.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<h2>Product Details</h2>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.ProductName" style="max-width: 128px; max-height: 128px;" />
            }
        </dd>
        

        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.ProductName</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@(Model.Price.HasValue ? string.Format(new System.Globalization.CultureInfo("en-ZA"), "{0:C}", Model.Price.Value) : "")</dd>

        <dt class="col-sm-2">Stock</dt>
        <dd class="col-sm-10">@Model.StockQuantity</dd>

        <dt class="col-sm-2">Brand</dt>
        <dd class="col-sm-10">@Model.Brand</dd>

        <dt class="col-sm-2">Color</dt>
        <dd class="col-sm-10">@Model.Colour</dd>

        <dt class="col-sm-2">Size</dt>
        <dd class="col-sm-10">@Model.Size</dd>

    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-partitionKey="@Model.PartitionKey" asp-route-rowKey="@Model.RowKey">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
