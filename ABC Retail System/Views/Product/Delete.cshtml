@model ABC_Retail_System.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>

<h4>Are you sure you want to delete this?</h4>
<hr />

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.ProductName" style="max-width: 128px; max-height: 128px;" />
            }
        </dd>


        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.ProductName</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@(Model.Price.HasValue ? string.Format(new System.Globalization.CultureInfo("en-ZA"), "{0:C}", Model.Price.Value) : "")</dd>

        <dt class="col-sm-2">Stock</dt>
        <dd class="col-sm-10">@Model.StockQuantity</dd>

    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="PartitionKey" />
        <input type="hidden" asp-for="RowKey" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
